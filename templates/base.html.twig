{% extends '@AdminLTE/layout/default-layout.html.twig' %}

{% set settings = settings.getValue(app.request, 'school_name', true) %}

{% block title %}{{ settings.school_name }}{% endblock %}

{% block stylesheets %}

	{{ parent() }}
	<link rel="stylesheet" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"/>
	{{ encore_entry_link_tags('app') }}

{% endblock %}

{% block logo_mini %} <b>{{ settings.school_name|slice(0, 5) }}</b> {% endblock %}
{% block logo_large %} <b>{{ settings.school_name }}</b> {% endblock %}

{% block body %}{% endblock %}

{% block javascripts %}

	{{ encore_entry_script_tags('app') }}
	{{ parent() }}
	<script type="text/javascript" src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
	<script type="text/javascript">
		$(document).ready( function () {
			$('#subjects_table').DataTable();
		} );
	</script>
{% endblock %}
