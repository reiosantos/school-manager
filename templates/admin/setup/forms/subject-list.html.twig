<div class="col-md-8">
	<div class="box box-success">
		<div class="box-header">
			<h3 class="box-title">Available Subjects Offered</h3>
		</div>
		<div class="box-body">
			<table id="subjects_table"
				   class="table table-striped table-bordered dt-responsive nowrap"
				   cellspacing="0"
				   width="100%">
				<thead>
				<tr>
					<th>Subject Number</th>
					<th>Subject name</th>
					<th>Category</th>
					<th>Action</th>
				</tr>
				</thead>
				<tbody>

				{% if subjects is defined and subjects|length > 0 %}

					{% for subject in subjects %}
						<tr>
							<td>{{ subject.getSubjectNo() }}</td>
							<td>{{ subject.getSubjectName()|capitalize }}</td>
							<td>{{ subject.getSubjectCategory()|capitalize }}</td>
							<td>
								<div class="col-md-12 col-sm-12 col-xs-12">
									<button type="submit" class="btn btn-danger" data-toggle="modal"
											data-target="#deleteModal_{{ subject.getSubjectNo()|split(" ")|join() }}">
										<i class="fa fa-trash-o"></i> Delete
									</button>
								</div>
							</td>

							<!-- Modal -->
							<div class="modal fade" id="deleteModal_{{ subject.getSubjectNo()|split(" ")|join() }}"
								 tabindex="-1" role="dialog">
								<div class="modal-dialog">
									<!-- Modal content-->
									<div class="modal-content">
										<div class="modal-header">
											<button type="button" class="close" data-dismiss="modal">&times;</button>
											<h4 style="color:red;">
												<span class="fa fa-trash-o"></span> Delete
											</h4>
										</div>
										<div class="modal-body">
											Delete Subject {
											<br> -------------------------------------
											<br> Code :: {{ subject.getSubjectNo() }} ,
											<br> Name :: {{ subject.getSubjectName()|capitalize }},
											<br> Category :: {{ subject.getSubjectCategory()|capitalize }}
											<br> ---------------------------------------- <br>}
										</div>
										<div class="modal-footer">
											<a href="{{ url('delete_subject', { 'subject_no': subject.getSubjectNo()}) }}" >
												<button type="submit" class="btn btn-danger pull-right">
													<span class="fa fa-trash-o"></span> Delete
												</button>
											</a>
											<button type="submit" class="btn btn-default pull-right"
													data-dismiss="modal">
												<span class="fa fa-times"></span> Cancel
											</button>
										</div>
									</div>
								</div>
							</div>
						</tr>

					{% endfor %}

				{% endif %}

				</tbody>
			</table>


		</div>
		<!-- /.box-body -->
	</div>
	<!-- /.box -->
</div>
