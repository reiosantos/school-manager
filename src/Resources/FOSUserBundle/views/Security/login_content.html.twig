{% trans_default_domain 'FOSUserBundle' %}


<div class="login-box">
    <div class="login-logo">
        <a target="_blank" href="{{ url('home_page') }}"><b>{{ school_name }}</b></a>
    </div>
    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>

        <form action="{{ path("fos_user_security_check") }}" role="form" method="post">

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

            <div class="form-group has-feedback">
                <input type="text" id="username" placeholder="Username" name="_username" value="{{ last_username }}" class="form-control" required="required" />
                <span class="fa fa-envelope form-control-feedback"/>
            </div>
            <div class="form-group has-feedback">
                <input type="password" id="password" class="form-control" placeholder="password" name="_password" required="required" />
                <span class="fa fa-lock form-control-feedback"/>
            </div>
            <div class="text-danger text-center">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox">
                        <label for="remember_me"> <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked /> {{ 'security.login.remember_me'|trans }}</label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <button type="submit" id="_submit" name="_submit" class="btn btn-success btn-block btn-flat" >{{ 'security.login.submit'|trans }}</button>
                </div>
            </div>
        </form>

        <div class="social-auth-links text-center">
            <p>- OR -</p>
            <a class="btn btn-block btn-primary btn-flat text-center" href="{{ path("fos_user_registration_register") }}" >Register your account</a>

            <a class="btn btn-block btn-default btn-flat" href="{{ path('fos_user_resetting_request') }}">I Forgot my password</a>
        </div>

    </div>
</div>
