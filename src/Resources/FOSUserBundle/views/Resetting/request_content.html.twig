{% trans_default_domain 'FOSUserBundle' %}

<div class="login-box">
	<div class="login-logo">
		<a target="_blank" href="{{ url('home_page') }}"><b>{{ school_name }}</b></a>
	</div>
	<div class="login-box-body">
		<p class="login-box-msg">Password Reset</p>

		<form action="{{ path("fos_user_resetting_send_email") }}" role="form" method="post">

			<div class="form-group has-feedback">
				<input type="text" id="username" placeholder="Your ID number" name="username" class="form-control" required="required" />
				<span class="fa fa-envelope form-control-feedback"/>
			</div>
			<div class="text-danger text-center">
				{% if error is defined %}
					<div>{{ error }}</div>
				{% endif %}
			</div>
			<div class="row">
				<div class="col-xs-12">
					<button type="submit" id="_submit" name="_submit" class="btn btn-primary btn-block btn-flat" >{{ 'resetting.request.submit'|trans }}</button>
				</div>
			</div>
		</form>

		<div class="social-auth-links text-center">
			<a class="btn btn-block btn-default btn-flat" href="{{ path("fos_user_security_login") }}" >Back to login</a>
		</div>

	</div>
</div>
